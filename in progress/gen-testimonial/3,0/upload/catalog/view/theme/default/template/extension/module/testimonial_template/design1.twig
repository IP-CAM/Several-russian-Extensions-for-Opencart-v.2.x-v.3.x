{% for testimonation in testimonations %}
<div class="swiper-slide">
	<div class="opgtm-testimonial-left">
		{% if    testimonation.author_image   and  display_avatar %}
			<div class="opgtm-avtar-image"><img src="{{ testimonation.author_image }}" alt="avatar" class="opgtm-{{ class_image }}"></div>
		{% endif %}
	</div>
	<div class="opgtm-testimonial-content">
		<i class="fa fa-quote-left"></i>
		<h4>{{ testimonial_title }}</h4>
		<div class="opgtm-testimonials-text">
				{% if display_quotes %} <div class="quotes"> {% endif %}
					<div class="opgtm-content_description">
					  {{ testimonation.description }} 
					</div>
				{% if display_quotes %} </div> {% endif %}
		</div>
	</div>
	{% if display_client  and  testimonation.author %}
		<div class="opgtm-testimonial-client">
			{{ testimonation.author }}
		</div>
	{% endif %}
	{% if display_job  and  job_title  or  display_company  and  testimonation.company %}
		<div class="opgtm-testimonial-job">
			{% if display_job  and  testimonation.job_title %}
				{{ testimonation.job_title }}
			{% endif %}
			{% if display_job  and  testimonation.job_title  and  display_company  and  testimonation.company %} 
				{{ " / " }}
			{% endif %}
			{% if display_company  and  testimonation.company %}
				{{ '<a href="'~testimonation.urlCompany~'" > '~testimonation.company~' </a>' }}
			{% endif %}
		</div>
	{% endif %}
</div>
{% endfor %}