										<option value="flip" selected="selected">{{ text_flip }}</option>
										<option value="creative">{{ text_creative }}</option>
										<option value="cards">{{ text_cards }}</option>
										{% elseif effect=='creative' %}
										<option value="slide">{{ text_slide }}</option>
										<option value="fade">{{ text_fade }}</option>
										<option value="cube">{{ text_cube }}</option>
										<option value="coverflow">{{ text_coverflow }}</option>
										<option value="flip">{{ text_flip }}</option>
										<option value="creative" selected="selected">{{ text_creative }}</option>
										<option value="cards">{{ text_cards }}</option>
										{% elseif effect=='cards' %}
										<option value="slide">{{ text_slide }}</option>
										<option value="fade">{{ text_fade }}</option>
										<option value="cube">{{ text_cube }}</option>
										<option value="coverflow">{{ text_coverflow }}</option>
										<option value="flip">{{ text_flip }}</option>
										<option value="creative">{{ text_creative }}</option>
										<option value="cards" selected="selected">{{ text_cards }}</option>
										{% else %}
										<option value="slide" selected="selected">{{ text_slide }}</option>
										<option value="fade">{{ text_fade }}</option>
										<option value="cube">{{ text_cube }}</option>
										<option value="coverflow">{{ text_coverflow }}</option>
										<option value="flip">{{ text_flip }}</option>
										<option value="creative">{{ text_creative }}</option>
										<option value="cards">{{ text_cards }}</option>
										{% endif %}
									</select>
								</div>
							</div>
							<div class="form-group">
								<label class="col-sm-2 control-label" for="input-enabled">{{ entry_enabled }}</label>
								<div class="col-sm-10">
									<select name="enabled" id="input-enabled" class="form-control">
										{% if enabled %}
										<option value="true" selected="selected">{{ text_enabled }}</option>
										<option value="false">{{ text_disabled }}</option>
										{% else %}
