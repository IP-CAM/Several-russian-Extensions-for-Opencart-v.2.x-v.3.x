										<option value="0" selected="selected">{{ text_disabled }}</option>
										{% endif %}
									</select>
								</div>
							</div>
						</div>
						<div class="tab-pane" id="tab-data">
							<div class="form-group">
								<label class="col-sm-2 control-label" for="input-direction">{{ entry_direction }}</label>
								<div class="col-sm-10">
									<select name="direction" id="input-direction" class="form-control">
										{% if direction=='vertical' %}
										<option value="horizontal">{{ text_horizontal }}</option>
										<option value="vertical" selected="selected">{{ text_vertical }}</option>
										{% else %}
										<option value="horizontal" selected="selected">{{ text_horizontal }}</option>
										<option value="vertical">{{ text_vertical }}</option>
										{% endif %}
									</select>
								</div>
							</div>
							<div class="form-group">
								<label class="col-sm-2 control-label" for="input-effect">{{ entry_effect }}</label>
								<div class="col-sm-10">
									<select name="effect" id="input-effect" class="form-control">
										{% if effect=='fade' %}
										<option value="slide">{{ text_slide }}</option>
										<option value="fade" selected="selected">{{ text_fade }}</option>
										<option value="cube">{{ text_cube }}</option>
										<option value="coverflow">{{ text_coverflow }}</option>
										<option value="flip">{{ text_flip }}</option>
										<option value="creative">{{ text_creative }}</option>
										<option value="cards">{{ text_cards }}</option>
										{% elseif effect=='cube' %}
										<option value="slide">{{ text_slide }}</option>
										<option value="fade">{{ text_fade }}</option>
										<option value="cube" selected="selected">{{ text_cube }}</option>
										<option value="coverflow">{{ text_coverflow }}</option>
										<option value="flip">{{ text_flip }}</option>
										<option value="creative">{{ text_creative }}</option>
										<option value="cards">{{ text_cards }}</option>
