{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        <button type="submit" form="form-module" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
        <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a></div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>
  <div class="container-fluid">
    {% if error_warning %}
    <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_edit }}</h3>
      </div>
      <div class="panel-body">
        <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-module" class="form-horizontal">
        <div class="col-sm-2">
          <div class="form-group">
            <label class="col-sm-12" for="input-second">{{ entry_second }}</label>
            <div class="col-sm-12">
              <input type="number" name="module_select_lang_second" value="{{ module_select_lang_second }}" placeholder="{{ entry_second }}" id="input-second" class="form-control" />
              {% if error_second %}
              <div class="text-danger">{{ error_second }}</div>
              {% endif %}
            </div>
          </div>
          </div>
          <div class="col-sm-3">
          <div class="form-group">
            <label class="col-sm-12" for="input-isAllPage">{{ entry_isAllPage }}</label>
            <div class="col-sm-12">
              <select name="module_select_lang_isAllPage" id="input-isAllPage" class="form-control">
                {% if module_select_lang_isAllPage %}
                <option value="1" selected="selected">{{ text_enabled }}</option>
                <option value="0">{{ text_disabled }}</option>
                {% else %}
                <option value="1">{{ text_enabled }}</option>
                <option value="0" selected="selected">{{ text_disabled }}</option>
                {% endif %}
              </select>
            </div>
          </div>
          </div>
          <div class="col-sm-3">
          <div class="form-group">
            <label class="col-sm-12" for="input-isCoockie">{{ entry_isCoockie }}</label>
            <div class="col-sm-12">
              <select name="module_select_lang_isCoockie" id="input-isCoockie" class="form-control">
                {% if module_select_lang_isCoockie %}
                <option value="1" selected="selected">{{ text_enabled }}</option>
                <option value="0">{{ text_disabled }}</option>
                {% else %}
                <option value="1">{{ text_enabled }}</option>
                <option value="0" selected="selected">{{ text_disabled }}</option>
                {% endif %}
              </select>
            </div>
          </div>
          </div>
          <div class="col-sm-2">
          <div class="form-group">
            <label class="col-sm-12" for="input-image">{{ entry_image }}</label>
            <div class="col-sm-12">
              <select name="module_select_lang_image" id="input-image" class="form-control">
                {% if module_select_lang_image %}
                <option value="1" selected="selected">{{ text_enabled }}</option>
                <option value="0">{{ text_disabled }}</option>
                {% else %}
                <option value="1">{{ text_enabled }}</option>
                <option value="0" selected="selected">{{ text_disabled }}</option>
                {% endif %}
              </select>
            </div>
          </div>
          </div>
          <div class="col-sm-3">
          <div class="form-group">
            <label class="col-sm-12" for="input-status">{{ entry_status }}</label>
            <div class="col-sm-11">
              <select name="module_select_lang_status" id="input-status" class="form-control">
                {% if module_select_lang_status %}
                <option value="1" selected="selected">{{ text_enabled }}</option>
                <option value="0">{{ text_disabled }}</option>
                {% else %}
                <option value="1">{{ text_enabled }}</option>
                <option value="0" selected="selected">{{ text_disabled }}</option>
                {% endif %}
              </select>
            </div>
          </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
{{ footer }}