{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        <button data-toggle="tooltip" title="{{ button_index }}" class="btn btn-primary indexing">{{ button_index }}</button>
        <button type="submit" form="form-module" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
        <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a></div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>
  <div class="container-fluid">
    {% if error_warning %}
    <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_edit }}</h3>
      </div>
      <div class="panel-body">
        <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-module" class="form-horizontal">
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-status">{{ entry_status }}</label>
            <div class="col-sm-10">
              <select name="module_smartsearch_status" id="input-status" class="form-control">              
                {% if module_smartsearch_status %}
                <option value="1" selected="selected">{{ text_enabled }}</option>
                <option value="0">{{ text_disabled }}</option>
                {% else %}
                <option value="1">{{ text_enabled }}</option>
                <option value="0" selected="selected">{{ text_disabled }}</option>
                {% endif %}
              </select>
            </div>
          </div>          
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-field"><span data-toggle="tooltip" title="" data-original-title="{{ help_field }}">{{ entry_field }}</span></label>
            <div class="col-sm-10">
              <input name="module_smartsearch_field" id="input-field" class="form-control" value="{{ module_smartsearch_field }}" placeholder='header input[name="search"]'>              
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-image">{{ entry_image }}</label>
            <div class="col-sm-10">
              <select name="module_smartsearch_image" id="input-image" class="form-control">
                {% if module_smartsearch_image %}
                <option value="1" selected="selected">{{ text_yes }}</option>
                <option value="0">{{ text_no }}</option>
                {% else %}
                <option value="1">{{ text_yes }}</option>
                <option value="0" selected="selected">{{ text_no }}</option>
                {% endif %}
              </select>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-image-width">{{ entry_image_width }}</label>
            <div class="col-sm-10">
              <input name="module_smartsearch_image_width" id="input-image-width" class="form-control" value="{{ module_smartsearch_image_width }}">              
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-image-height">{{ entry_image_height }}</label>
            <div class="col-sm-10">
              <input name="module_smartsearch_image_height" id="input-image-height" class="form-control" value="{{ module_smartsearch_image_height }}">              
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-model">{{ entry_model }}</label>
            <div class="col-sm-10">
              <select name="module_smartsearch_model" id="input-model" class="form-control">
                {% if module_smartsearch_model %}
                <option value="1" selected="selected">{{ text_yes }}</option>
                <option value="0">{{ text_no }}</option>
                {% else %}
                <option value="1">{{ text_yes }}</option>
                <option value="0" selected="selected">{{ text_no }}</option>
                {% endif %}
              </select>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-price">{{ entry_price }}</label>
            <div class="col-sm-10">
              <select name="module_smartsearch_price" id="input-price" class="form-control">
                {% if module_smartsearch_price %}
                <option value="1" selected="selected">{{ text_yes }}</option>
                <option value="0">{{ text_no }}</option>
                {% else %}
                <option value="1">{{ text_yes }}</option>
                <option value="0" selected="selected">{{ text_no }}</option>
                {% endif %}
              </select>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-oldprice">{{ entry_oldprice }}</label>
            <div class="col-sm-10">
              <select name="module_smartsearch_oldprice" id="input-oldprice" class="form-control">
                {% if module_smartsearch_oldprice %}
                <option value="1" selected="selected">{{ text_yes }}</option>
                <option value="0">{{ text_no }}</option>
                {% else %}
                <option value="1">{{ text_yes }}</option>
                <option value="0" selected="selected">{{ text_no }}</option>
                {% endif %}
              </select>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-button-all">{{ entry_button_all }}</label>
            <div class="col-sm-10">
              <select name="module_smartsearch_button_all" id="input-button-all" class="form-control">
                {% if module_smartsearch_button_all %}
                <option value="1" selected="selected">{{ text_yes }}</option>
                <option value="0">{{ text_no }}</option>
                {% else %}
                <option value="1">{{ text_yes }}</option>
                <option value="0" selected="selected">{{ text_no }}</option>
                {% endif %}
              </select>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-search-model">{{ entry_search_model }}</label>
            <div class="col-sm-10">
              <select name="module_smartsearch_search_model" id="input-search-model" class="form-control">
                {% if module_smartsearch_search_model %}
                <option value="1" selected="selected">{{ text_yes }}</option>
                <option value="0">{{ text_no }}</option>
                {% else %}
                <option value="1">{{ text_yes }}</option>
                <option value="0" selected="selected">{{ text_no }}</option>
                {% endif %}
              </select>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-search-engine">{{ entry_search_engine }}</label>
            <div class="col-sm-10">
              <select name="module_smartsearch_search_engine" id="input-search-engine" class="form-control">
                {% if module_smartsearch_search_engine %}
                <option value="1" selected="selected">{{ text_yes }}</option>
                <option value="0">{{ text_no }}</option>
                {% else %}
                <option value="1">{{ text_yes }}</option>
                <option value="0" selected="selected">{{ text_no }}</option>
                {% endif %}
              </select>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-limit">{{ entry_limit }}</label>
            <div class="col-sm-10">
              <input name="module_smartsearch_limit" id="input-limit" class="form-control" value="{{ module_smartsearch_limit }}">              
            </div>
          </div>   
        </form>
      </div>
    </div>
  </div>
</div>
<script type="text/javascript">
  $('.indexing').click(function(e){
      

      $.ajax({
          url: '{{ http_catalog }}index.php?route=extension/module/smartsearch/search_index',          
          beforeSend: function() {   
            $('.indexing').text('{{ text_index }}');  
            $('.indexing').prop('disabled',true);                               
          },
          complete: function() {   
            $('.indexing').text('{{ button_index }}'); 
            $('.indexing').prop('disabled',false);                                 
          },
          success: function(json) {
              
              
          },
          error: function(xhr, ajaxOptions, thrownError) {
              alert(thrownError + "\r\n" + xhr.statusText + "\r\n" + xhr.responseText);
          }
      });
  });  
</script>
{{ footer }}